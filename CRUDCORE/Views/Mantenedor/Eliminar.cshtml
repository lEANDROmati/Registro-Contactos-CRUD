@model ContactoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Editar Contacto</h5>
    <div class="card-body">

        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">

            <input asp-for="IdContacto" hidden class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el Contacto : @Html.DisplayTextFor(m=> m.Nombre)?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-secondary">Volver a la lista</a>
        </form>

    </div>
</div>

