@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Lista de Contacto</h5>
    <div class="card-body">
    <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success">Crear Contacto</a>
    <hr />
    <table class="table table-bordered" >
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Correo</th>
            </tr>
        </thead>
        <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>
                            <a asp-action="Editar" 
                            asp-controller="Mantenedor"  
                            asp-route-IdContacto="@item.IdContacto"
                            class="btn btn-primary btn-sm"> Editar </a>

                            <a asp-action="Eliminar"
                               asp-controller="Mantenedor"
                               asp-route-IdContacto="@item.IdContacto"
                               class="btn btn-danger btn-sm"> ELiminar </a>

                        </td>
                    </tr>
                }
        </tbody>
    </table>

    </div>
</div>

